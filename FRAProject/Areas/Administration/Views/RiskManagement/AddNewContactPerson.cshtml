@using FRA.Data.View
@using FRA.Web.Models
@model ContactPersonView

<form name="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add Contact Person" })

    <div class="modal-body userModalForm">
        <!-- Begin Contact person input -->
        <div class="form">
            <input type="hidden" asp-for="RiskAssessmentID" />

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="FullName" class="textFWith120"> Name</label>
                    <input id="idFullName" asp-for="FullName" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="PhoneNumber" class="textFWith120"> Contact no</label>
                    <input id="idPhoneNumber" asp-for="PhoneNumber" class="form-control textWith150" />
                </div>
            </div>
        </div>
        <!-- End Contact person input -->
    </div>

</form>
<div class="modal-footer">
    <button class="btn btn-success" id="AddUser" onclick="AddContactPerson()">Submit</button>
    <button id="Cancel" class="btn btn-secondary" type="button" onclick="ClearRiskDetailDOM()">Cancel</button>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}