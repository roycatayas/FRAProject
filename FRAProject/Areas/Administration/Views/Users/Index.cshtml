@using FRA.Web.Infrastructure.Custom
@using FRA.Web.Models

@{
    ViewData["Title"] = "Settings User";
}

@section Css {
    <link rel="stylesheet" type="text/css" href="~/lib/Datatables/css/dataTables.jqueryui.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/Jquery-UI-ThemeRoller/jquery-ui.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/TableDesign1.css" asp-append-version="true" />    
    <link rel="stylesheet" type="text/css" href="~/css/jquery.mCustomScrollbar.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/All.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/custom-themes.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/UserSetting.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/RiskManagement.css" asp-append-version="true" />
}


<div class="ImgLogoLogin"></div>
<div class="ImgTopLogin"></div>
<div>

    <div class="page-wrapper cool-theme sidebar-bg bg1 toggled" style="height: 0;">
        <a id="show-sidebar" class="btn btn-lg btn-dark" href="#">
            <i class="fas fa-bars font30"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper font18">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a href="#">Menu</a>
                    <div id="close-sidebar">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded" src="~/images/user.jpg" alt="User picture">
                    </div>
                    <div class="user-info">
                        <span>
                            <strong>Roy Catayas</strong>
                        </span>
                        <span class="user-role">Administrator</span>
                    </div>
                </div>

                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>General</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-book"></i>
                                <span>Management</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-area="administration" asp-controller="RiskManagement" asp-action="Index">Risk Assessment</a>
                                    </li>
                                    <li>
                                        <a href="#">History</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fal fa-file-spreadsheet" style="font-size: 28px"></i>
                                <span>Dashboard</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="#">Dashboard 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Dashboard 2</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-chart-line"></i>
                                <span>Charts</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="#">Pie chart</a>
                                    </li>
                                    <li>
                                        <a href="#">Line chart</a>
                                    </li>
                                    <li>
                                        <a href="#">Bar chart</a>
                                    </li>
                                    <li>
                                        <a href="#">Histogram</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <li class="header-menu">
                            <span>System Settings</span>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-book"></i>
                                <span>Templates</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a href="#">Category</a>
                                    </li>
                                    <li>
                                        <a href="#">Section</a>
                                    </li>
                                    <li>
                                        <a href="#">Risk</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="fa fa-user"></i>
                                <span>Users</span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul>
                                    <li>
                                        <a asp-area="administration" asp-controller="Users" asp-action="Index">Manage User</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-content  -->
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            <div id="pagecontent" style="overflow-y: hidden">
                <div class="riskContent Opacity70">
                    <div class="row relativeFromBoxTop" style="display: inline;">
                        <div class="topUserDiv alignLeftTopDiv fontUser">
                            System Users
                        </div>
                        <div class="topUserDiv alignRightTopDiv" style="margin-right: 38px;">
                            <button id="btnNewsUser" data-toggle="modal" data-target="#modal-user" data-backdrop="static" data-keyboard="false" class="btn btn-lg btn-light" onclick=""><i class="fal fa-user-alt newRiskButton"></i> Create New User</button>
                            @*<a id="createEditUserModal1" data-toggle="modal" asp-action="AddUser" data-target="#modal-action-user" data-backdrop="static" data-keyboard="false" class="btn btn-lg btn-default"><i class="glyphicon glyphicon-user"></i> Create New User</a>*@
                        </div>
                    </div>

                    <div class="row relativeFromBoxMid">
                        <div id="risk-content" class="wCal5 pb10">
                            <div class="table-responsive">
                                <table id="users-table" style="width: 100%">
                                    <thead>
                                        <tr>
                                            <th>Email</th>
                                            <th>Full Name</th>
                                            <th>Organization</th>
                                            <th>Phone Number</th>
                                            <th>Is Locked</th>
                                            <th>Locked Until</th>
                                            <th>Commands</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Email</th>
                                            <th>Full Name</th>
                                            <th>Organization</th>
                                            <th>Phone Number</th>
                                            <th>Is Locked</th>
                                            <th>Locked Until</th>
                                            <th>Commands</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
        <!-- page-content" -->
    </div>

    <div tabindex="-1" class="modal fade" id="modal-action-user-edit" role="dialog" aria-hidden="true" aria-labelledby="modal-action-user-label">
        <div class="modal-dialog ">
            <div class="modal-content" id="modal-content-editUser">

            </div>
        </div>
    </div>

    <div tabindex="-1" class="modal fade" id="modal-user" role="dialog" aria-hidden="true" aria-labelledby="modal-action-user-label">
        <div class="modal-dialog ">
            <div class="modal-content" id="modal-content-addUser">

            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_DataTablesScriptsPartial"); }
    <script type="text/javascript" src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/MainPage.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/custom.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/jquery.mCustomScrollbar.concat.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/UserIndex.js" asp-append-version="true"></script>
}


