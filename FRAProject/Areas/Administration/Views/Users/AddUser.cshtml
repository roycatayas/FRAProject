@using FRA.Web.Models
@model FRA.Web.Areas.Administration.Models.UserViewModelBase

<form name="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Add User" })
    
    <div class="modal-body userModalForm">
        <!-- Begin User input -->
        <div class="form">            
            
            <div class="form-group row">
                <div class="inlineForm">
                    <label class="textFWith120">Select Role</label>
                    <select class="custom-select textWith150" id="ApplicationRoleId">
                        @foreach (var iRole in Model.ApplicationRoles)
                        {
                            <option value="@iRole.Key">@iRole.Value</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="FirstName" class="textFWith120">First Name</label>
                    <input id="idFirstName" asp-for="FirstName" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="LastName" class="textFWith120">Last Name</label>
                    <input id="idLastName" asp-for="LastName" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="Email" class="textFWith120">Email</label>
                    <input id="idEmail" asp-for="Email" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="Password" class="textFWith120">Password</label>
                    <input id="idPassword" asp-for="Password" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="Address" class="textFWith120">Address</label>
                    <input id="idAddress" asp-for="Address" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="PhoneNumber" class="textFWith120">Phone Number</label>
                    <input id="idPhoneNumber" asp-for="PhoneNumber" class="form-control textWith150" />
                </div>
            </div>

            <div class="form-group row">
                <div class="inlineForm">
                    <label asp-for="Orginization" class="textFWith120">Orginization</label>
                    <input id="idOrginization" asp-for="Orginization" class="form-control textWith150" />
                </div>
            </div>

        </div>
        <!-- End User input -->
    </div>
        
</form>
<div class="modal-footer">
    <button class="btn btn-success" id="AddUser" onclick="AddUser()">Submit</button>
    <button id="Cancel" class="btn btn-secondary" type="button" onclick="cancelUser()">Cancel</button>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
